<Window x:Class="Login.RecoverPasswordPhone"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="RecoverPasswordPhone" Height="200" Width="300">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <AccessText Text="_Enter 6 digit code we sent on your phone number:" Margin="5, 5, 5 ,5"/>
        </StackPanel>
        <TextBlock HorizontalAlignment="Center">
            <TextBox Name="CodeTxt" Width="190"  Text="{Binding Code}"/>
        </TextBlock>
        <Button Content="Finish" Margin="10, 10 ,10 ,5" Click="Button_Click_Finish"/>
        <Button Content="Resend" Margin="10, 0, 10, 5" Click="Button_Click_Resend"/>
        <Button Content="Cancel" Margin="10, 0, 10 ,10" Click="Button_Click_Cancel"/>
    </StackPanel>
</Window>
