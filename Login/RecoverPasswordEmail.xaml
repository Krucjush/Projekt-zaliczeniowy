<Window x:Class="Login.RecoverPasswordEmail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="RecoverPassword" Height="170" Width="250">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <AccessText Text="_Enter 6 digit code we sent on your email:"/>
        </StackPanel>
        <TextBlock>
            <TextBox Name="CodeTxt" Width="190"  Text="{Binding Code}" Margin="10"/>
        </TextBlock>
        <Button Content="Finish" Margin="10"/>
    </StackPanel>
</Window>
