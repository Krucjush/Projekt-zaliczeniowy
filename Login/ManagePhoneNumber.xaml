<Window x:Class="Login.ManagePhoneNumber"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="ManagePhoneNumber" Height="180" Width="250">
    <StackPanel>
        <StackPanel Margin="10">
            <TextBlock Name="TextBlockPhoneNumberExists"/>
            <TextBlock Name="TextBlockPhoneNumber"/>
            <AccessText Text="_New Phone Number:"/>
            <TextBox Width="200" Text="{Binding NewPhoneNumber}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Width="100" Margin="10" Content="Remove" Click="Button_Click_Remove"/>
            <Button Width="100" Margin="10"  Content="Change" Click="Button_Click_Change"/>
        </StackPanel>
    </StackPanel>
</Window>
