<Window x:Class="Login.ManagePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="ManagePassword" Height="180" Width="250">
    <StackPanel>
        <StackPanel Margin="10">
            <AccessText Text="_Current Password:"/>
            <TextBlock Name="TextBlockPassword"/>
            <AccessText Text="_New Password:"/>
            <TextBox Width="200" Text="{Binding NewPassword}"/>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Button Width="100" Margin="10" Content="Change" Click="Button_Click_Change"/>
        </StackPanel>
    </StackPanel>
</Window>
