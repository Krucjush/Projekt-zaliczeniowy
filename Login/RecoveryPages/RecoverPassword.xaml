<Window x:Class="Login.RecoverPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="RecoverPassword" Height="170" Width="250">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <AccessText Text="_Enter User Name:"/>
        </StackPanel>
        <TextBlock>
            <TextBox Name="UserNameTxt" Width="200"  Text="{Binding UserName}"/>
        </TextBlock>
        <Button Width="80" HorizontalAlignment="Right" Content="Next >" Margin="0, 10, 15, 10" Click="Button_Click_Next"/>
        <Button Width="80" HorizontalAlignment="Left" Content="&lt; Back" Margin="0, -30, 25, 10" IsEnabled="False"/>
        <Button Width="160" Content="Cancel" Margin="10" Click="Button_Click_Cancel"/>
    </StackPanel>
</Window>
