<Window x:Class="Program.ManageAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Account" Height="450" Width="800">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <AccessText Text="Your account details:"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <AccessText Text="UserName: "/>
            <TextBlock Name="UserNametxt"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <AccessText Text="Password: "/>
            <TextBlock Name="Passwordtxt"/>
        </StackPanel>
    </StackPanel>
</Window>
